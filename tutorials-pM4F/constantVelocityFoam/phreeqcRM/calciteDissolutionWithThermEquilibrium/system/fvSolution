        nPostSweeps      2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 10;
        mergeLevels      1;
*/
    }

    Ci
    {
		solver	PBiCG;
		preconditioner DILU;
        tolerance        1e-6;
        relTol           0.1;
        nSweeps          1;
    }

    "(Y.*)"
    {
		solver	PBiCG;
		preconditioner DILU;
