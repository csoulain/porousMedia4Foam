//		preconditioner DIC;
        tolerance        1e-09;
        relTol           0.1;
        nSweeps          1;
    }

    "(p|pFinal)"
    {

		solver	PCG;
		preconditioner DIC;
        tolerance        1e-7;
        relTol           0.0;
/*

